<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E6DA86"
    android:backgroundTint="#D6BABA"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="242dp"
        android:layout_height="280dp"
        android:background="#E6DA86"
        android:backgroundTint="#D6BABA"
        app:layout_constraintBottom_toTopOf="@+id/skbPeso"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/nro" />

    <SeekBar
        android:id="@+id/skbAltura"
        style="@style/Widget.AppCompat.SeekBar"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:background="#E6DA86"
        android:backgroundTint="#D6BABA"
        android:foregroundTint="#000000"
        android:indeterminateTint="#000000"
        android:max="250"
        android:progress="0"
        android:progressBackgroundTint="#000000"
        app:layout_constraintBottom_toTopOf="@+id/btnCalcular"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/skbPeso" />

    <SeekBar
        android:id="@+id/skbPeso"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:background="#E6DA86"
        android:backgroundTint="#D6BABA"
        android:foregroundTint="#000000"
        android:indeterminateTint="#000000"
        android:max="300"
        android:progressBackgroundTint="#000000"
        app:layout_constraintBottom_toTopOf="@+id/skbAltura"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <TextView
        android:id="@+id/txtPeso"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        android:layout_marginEnd="250dp"
        android:layout_marginBottom="16dp"
        android:background="#E6DA86"
        android:backgroundTint="#D6BABA"
        android:text="Peso (em Kg):"
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/skbPeso"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.774"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnCalcular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#E6DA86"
        android:backgroundTint="#83C066"
        android:text="Calcular"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/skbAltura" />

    <TextView
        android:id="@+id/txtAltura"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="120dp"
        android:layout_marginEnd="240dp"
        android:layout_marginBottom="8dp"
        android:background="#E6DA86"
        android:backgroundTint="#D6BABA"
        android:text="Altura (em metros):"
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/skbAltura"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.615"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>